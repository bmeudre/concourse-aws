{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-west-2",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn-ami*-ebs",
        "root-device-type": "ebs"
      },
      "owners": [
        "137112412989",
        "591542846629",
        "801119661308",
        "102837901569",
        "013907871322",
        "206029621532",
        "286198878708",
        "443319210888"
      ],
      "most_recent": true
    },
    "instance_type": "r4.large",
    "ebs_optimized": true,
    "ena_support": true,
    "ssh_username": "ec2-user",
    "ssh_file_transfer_method": "sftp",
    "ssh_pty": true,
    "ami_name": "packer-concourse-v3.5.0-{{timestamp}}",
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "unset HISTFILE",
      "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
      "curl -L https://github.com/concourse/concourse/releases/download/v3.5.0/concourse_linux_amd64 -o concourse",
      "chmod +x concourse",
      "sudo mv concourse /usr/bin/concourse",
      "concourse -version"
    ]
  }]
}